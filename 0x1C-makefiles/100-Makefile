# Makefile for school executable

# Compiler and compiler flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school.c

# Object files (auto-generated from source files)
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Main target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)

# Cleaning rules
.PHONY: clean oclean fclean re

clean:
	-@$(RM) *~ $(NAME) # Clean Emacs and Vim temporary files

oclean: clean
	-@$(RM) $(OBJ) # Clean object files

fclean: oclean
	-@$(RM) $(NAME) # Remove the executable

re: fclean all

# Ensure that m.h header file exists for each source file
$(SRC:.c=.o): m.h
