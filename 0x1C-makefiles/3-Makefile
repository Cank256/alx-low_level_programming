# Variables
CC = gcc
SRC = main.c another_file.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

# Executable and its dependencies
$(NAME): $(OBJ)
	$(CC) -o $@ $^

# Compile each .c file into a .o file
%.o: %.c
	$(CC) -c $< -o $@

# The 'all' rule builds the executable
all: $(NAME)

# Clean rule to delete Emacs and Vim temporary files, the executable, and object files
clean:
	$(RM) *~ \#* $(NAME)

# Oclean rule to delete the object files
oclean:
	$(RM) $(OBJ)

# Fclean rule to delete Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Re rule forces recompilation of all source files
re: oclean all
